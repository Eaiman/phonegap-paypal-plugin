<?xml version="1.0" encoding="UTF-8"?>
 
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="com.technext.PayPal"
      version="0.1.0">
    <name>PayPalMobile</name>
    <description>Sample PhoneGap PayPalMobile Plugin</description>
    <license>MIT</license>
    <keywords>phonegap,PayPalMobile</keywords>
 
 
    <js-module src="www/PayPalMobilePGPlugin.js" name="PayPalMobilePGPlugin">
        <clobbers target="window.PayPalMobile" />
    </js-module>
 
    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="PayPalMobile">
                <param name="android-package" value="com.paypal.android.sdk.phonegap.PayPalMobilePGPlugin"/>
            </feature>
        </config-file>
        
        <config-file target="AndroidManifest.xml" parent="/*">
            <!-- for card.io card scanning -->
	    <uses-permission android:name="android.permission.CAMERA" />
	    <uses-permission android:name="android.permission.VIBRATE" />

	    <!-- for most things, including card.io and paypal -->
	    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
	    <uses-permission android:name="android.permission.INTERNET" />

	    <!-- Camera features -->
	    <uses-feature android:name="android.hardware.camera" android:required="false" />
	    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
	    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />
        </config-file>
        
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <service android:name="com.paypal.android.sdk.payments.PayPalService" android:exported="false"/>

            <activity android:name="com.paypal.android.sdk.payments.PaymentActivity" />
            <activity android:name="com.paypal.android.sdk.payments.LoginActivity" />
            <activity android:name="com.paypal.android.sdk.payments.PaymentMethodActivity" />
            <activity android:name="com.paypal.android.sdk.payments.PaymentConfirmActivity" />

            <activity
                android:name="io.card.payment.CardIOActivity"
                android:configChanges="keyboardHidden|orientation" />
            <activity android:name="io.card.payment.DataEntryActivity" />
        </config-file>
 
 	<source-file src="src/android/libs/PayPalAndroidSDK.jar" target-dir="libs/" />
 	<source-file src="src/android/libs/armeabi/libcardioDecider.so" target-dir="libs/armeabi/libcardioDecider.so" />
 	<source-file src="src/android/libs/armeabi-v7a/libcardioDecider.so" target-dir="libs/armeabi-v7a/libcardioDecider.so" />
 	<source-file src="src/android/libs/armeabi-v7a/libcardioRecognizer.so" target-dir="libs/armeabi-v7a/libcardioRecognizer.so" />
 	<source-file src="src/android/libs/armeabi-v7a/libcardioRecognizer_tegra2.so" target-dir="libs/armeabi-v7a/libcardioRecognizer_tegra2.so" />
 	<source-file src="src/android/libs/armeabi-v7a/libopencv_core.so" target-dir="libs/armeabi-v7a/libopencv_core.so" />
 	<source-file src="src/android/libs/armeabi-v7a/libopencv_imgproc.so" target-dir="libs/armeabi-v7a/libopencv_imgproc.so" />
 	<source-file src="src/android/libs/mips/libcardioDecider.so" target-dir="libs/mips/libcardioDecider.so" />
 	<source-file src="src/android/libs/x86/libcardioDecider.so" target-dir="libs/x86/libcardioDecider.so" />
        <source-file src="src/android/PayPalMobilePGPlugin.java" target-dir="src/com/paypal/android/sdk/phonegap" />      
     </platform>          
	 
	 <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="PayPalMobilePGPlugin">
                <param name="ios-package" value="PayPalMobilePGPlugin" />
            </feature>
        </config-file>
        <header-file src="src/ios/PayPalMobilePGPlugin.h" />
        <source-file src="src/ios/PayPalMobilePGPlugin.m" />

        <framework src="AssetsLibrary.framework" />
        <framework src="MobileCoreServices.framework" />
    </platform>
</plugin>
